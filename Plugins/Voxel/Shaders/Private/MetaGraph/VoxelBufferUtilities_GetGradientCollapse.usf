#include "Common.ush"

uint Num;
float Step;
Buffer<float> Values;
RWBuffer<float> OutValues;

[numthreads(64, 1, 1)]
void Main(uint DispatchThreadId : SV_DispatchThreadID)
{
	if (DispatchThreadId >= Num)
	{
		return;
	}

	OutValues[DispatchThreadId] = (Values[2 * DispatchThreadId + 1] - Values[2 * DispatchThreadId + 0]) / Step;
}